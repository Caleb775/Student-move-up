# Student Records App - Production Environment Variables
# Copy this file to .env.production and fill in your actual values

# Application Configuration
RAILS_ENV=production
RAILS_HOST=your-domain.com
RAILS_MASTER_KEY=your_master_key_here

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/student_records_app_production
DATABASE_NAME=student_records_app_production
DATABASE_HOST=localhost
DATABASE_USERNAME=postgres
DATABASE_PASSWORD=your_database_password
DATABASE_PORT=5432

# Server Configuration
PORT=3000
RAILS_MAX_THREADS=5
WEB_CONCURRENCY=2

# Security
SECRET_KEY_BASE=your_secret_key_base_here

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_DOMAIN=gmail.com

# Optional: Redis for caching (if using Redis)
REDIS_URL=redis://localhost:6379/0

# Optional: Sidekiq for background jobs
SIDEKIQ_REDIS_URL=redis://localhost:6379/1

# Logging
RAILS_LOG_LEVEL=info

# Asset Configuration
RAILS_SERVE_STATIC_FILES=true

# Optional: External services
# ANALYTICS_API_KEY=your_analytics_key
# MONITORING_API_KEY=your_monitoring_key

# Optional: Feature flags
# ENABLE_ANALYTICS=true
# ENABLE_NOTIFICATIONS=true
# ENABLE_EXPORT=true
