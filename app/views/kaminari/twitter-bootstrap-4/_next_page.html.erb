<% if current_page.last? %>
  <li class="page-item disabled">
    <span class="page-link"><%= raw(t 'views.pagination.next') %></span>
  </li>
<% else %>
  <li class="page-item">
    <%= link_to raw(t 'views.pagination.next'), url, class: 'page-link', rel: 'next', remote: remote %>
  </li>
<% end %>
