<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="display-4 text-primary">
      <i class="bi bi-speedometer2 me-3"></i>
      Admin Dashboard
    </h1>
    <div class="text-muted">
      <i class="bi bi-calendar3 me-1"></i>
      <%= Date.current.strftime("%B %d, %Y") %>
    </div>
  </div>
  
  <!-- Statistics Cards -->
  <div class="row mb-4">
    <div class="col-md-3 mb-3">
      <div class="card text-white bg-primary shadow">
        <div class="card-body">
          <div class="d-flex justify-content-between">
            <div>
              <h5 class="card-title">Total Students</h5>
              <h2 class="mb-0"><%= @total_students %></h2>
            </div>
            <div class="align-self-center">
              <i class="bi bi-people-fill" style="font-size: 2rem;"></i>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <div class="col-md-3 mb-3">
      <div class="card text-white bg-success shadow">
        <div class="card-body">
          <div class="d-flex justify-content-between">
            <div>
              <h5 class="card-title">Total Users</h5>
              <h2 class="mb-0"><%= @total_users %></h2>
            </div>
            <div class="align-self-center">
              <i class="bi bi-person-check-fill" style="font-size: 2rem;"></i>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <div class="col-md-3 mb-3">
      <div class="card text-white bg-info shadow">
        <div class="card-body">
          <div class="d-flex justify-content-between">
            <div>
              <h5 class="card-title">Total Notes</h5>
              <h2 class="mb-0"><%= Note.count %></h2>
            </div>
            <div class="align-self-center">
              <i class="bi bi-sticky-fill" style="font-size: 2rem;"></i>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <div class="col-md-3 mb-3">
      <div class="card text-white bg-warning shadow">
        <div class="card-body">
          <div class="d-flex justify-content-between">
            <div>
              <h5 class="card-title">Avg Score</h5>
              <h2 class="mb-0"><%= Student.average(:total_score)&.round(1) || 0 %></h2>
            </div>
            <div class="align-self-center">
              <i class="bi bi-graph-up" style="font-size: 2rem;"></i>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Quick Actions -->
  <div class="row mb-4">
    <div class="col-12">
      <div class="card shadow">
        <div class="card-header bg-light">
          <h5 class="mb-0">
            <i class="bi bi-lightning-fill me-2"></i>
            Quick Actions
          </h5>
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-md-3 mb-2">
              <%= link_to students_path, class: "btn btn-outline-primary w-100" do %>
                <i class="bi bi-people me-2"></i>
                View All Students
              <% end %>
            </div>
            <div class="col-md-3 mb-2">
              <%= link_to new_student_path, class: "btn btn-outline-success w-100" do %>
                <i class="bi bi-person-plus me-2"></i>
                Add New Student
              <% end %>
            </div>
            <div class="col-md-3 mb-2">
              <%= link_to export_path, class: "btn btn-outline-info w-100" do %>
                <i class="bi bi-download me-2"></i>
                Export Data
              <% end %>
            </div>
            <div class="col-md-3 mb-2">
              <%= link_to import_path, class: "btn btn-outline-warning w-100" do %>
                <i class="bi bi-upload me-2"></i>
                Import Data
              <% end %>
            </div>
          </div>
          <div class="row">
            <div class="col-md-3 mb-2">
              <%= link_to users_path, class: "btn btn-outline-danger w-100" do %>
                <i class="bi bi-people me-2"></i>
                Manage Users
              <% end %>
            </div>
            <div class="col-md-3 mb-2">
              <%= link_to api_documentation_path, class: "btn btn-outline-dark w-100" do %>
                <i class="bi bi-code-slash me-2"></i>
                API Documentation
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <div class="row mt-4">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
          <h5>Recent Students</h5>
        </div>
        <div class="card-body">
          <% if @recent_students.any? %>
            <ul class="list-group list-group-flush">
              <% @recent_students.each do |student| %>
                <li class="list-group-item">
                  <%= link_to student.name, student_path(student) %>
                  <span class="badge bg-primary rounded-pill"><%= student.percentage.round(1) %>%</span>
                </li>
              <% end %>
            </ul>
          <% else %>
            <p>No students found.</p>
          <% end %>
        </div>
      </div>
    </div>
    
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
          <h5>Recent Notes</h5>
        </div>
        <div class="card-body">
          <% if @recent_notes.any? %>
            <ul class="list-group list-group-flush">
              <% @recent_notes.each do |note| %>
                <li class="list-group-item">
                  <strong><%= note.student.name %></strong><br>
                  <%= truncate(note.content, length: 50) %>
                  <small class="text-muted"><%= time_ago_in_words(note.created_at) %> ago</small>
                </li>
              <% end %>
            </ul>
          <% else %>
            <p>No notes found.</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
</div>