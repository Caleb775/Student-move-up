<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="display-4 text-primary">
      <i class="bi bi-download me-3"></i>
      Export Data
    </h1>
    <div class="text-muted">
      <i class="bi bi-calendar3 me-1"></i>
      <%= Date.current.strftime("%B %d, %Y") %>
    </div>
  </div>
  
  <div class="row">
    <div class="col-md-8">
      <!-- Export Options -->
      <div class="card shadow">
        <div class="card-header bg-primary text-white">
          <h5 class="mb-0">
            <i class="bi bi-file-earmark-spreadsheet me-2"></i>
            Available Exports
          </h5>
        </div>
        <div class="card-body">
          <!-- Students Export -->
          <div class="mb-4">
            <h6 class="text-primary">
              <i class="bi bi-people me-2"></i>
              Student Data
            </h6>
            <p class="text-muted">Export all student records with scores and teacher assignments</p>
            <div class="row">
              <div class="col-md-6 mb-2">
                <%= link_to export_students_csv_path, class: "btn btn-outline-success w-100" do %>
                  <i class="bi bi-filetype-csv me-2"></i>
                  Export as CSV
                <% end %>
              </div>
              <div class="col-md-6 mb-2">
                <%= link_to export_students_xlsx_path, class: "btn btn-outline-success w-100" do %>
                  <i class="bi bi-file-earmark-excel me-2"></i>
                  Export as Excel
                <% end %>
              </div>
            </div>
          </div>
          
          <hr>
          
          <!-- Notes Export -->
          <div class="mb-4">
            <h6 class="text-primary">
              <i class="bi bi-sticky me-2"></i>
              Notes Data
            </h6>
            <p class="text-muted">Export all notes with student and teacher information</p>
            <div class="row">
              <div class="col-md-6 mb-2">
                <%= link_to export_notes_csv_path, class: "btn btn-outline-info w-100" do %>
                  <i class="bi bi-filetype-csv me-2"></i>
                  Export as CSV
                <% end %>
              </div>
              <div class="col-md-6 mb-2">
                <%= link_to export_notes_xlsx_path, class: "btn btn-outline-info w-100" do %>
                  <i class="bi bi-file-earmark-excel me-2"></i>
                  Export as Excel
                <% end %>
              </div>
            </div>
          </div>
          
          <hr>
          
          <!-- Analytics Export -->
          <div class="mb-4">
            <h6 class="text-primary">
              <i class="bi bi-graph-up me-2"></i>
              Analytics Report
            </h6>
            <p class="text-muted">Comprehensive analytics report with multiple sheets and summary data</p>
            <div class="row">
              <div class="col-md-6 mb-2">
                <%= link_to export_analytics_xlsx_path, class: "btn btn-outline-warning w-100" do %>
                  <i class="bi bi-file-earmark-excel me-2"></i>
                  Export Analytics Report
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <div class="col-md-4">
      <!-- Quick Stats -->
      <div class="card shadow mb-3">
        <div class="card-header bg-light">
          <h6 class="mb-0">
            <i class="bi bi-info-circle me-2"></i>
            Export Information
          </h6>
        </div>
        <div class="card-body">
          <div class="row text-center">
            <div class="col-6">
              <h4 class="text-primary"><%= Student.count %></h4>
              <small class="text-muted">Students</small>
            </div>
            <div class="col-6">
              <h4 class="text-info"><%= Note.count %></h4>
              <small class="text-muted">Notes</small>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Export Tips -->
      <div class="card shadow">
        <div class="card-header bg-light">
          <h6 class="mb-0">
            <i class="bi bi-lightbulb me-2"></i>
            Export Tips
          </h6>
        </div>
        <div class="card-body">
          <ul class="list-unstyled mb-0">
            <li class="mb-2">
              <i class="bi bi-check-circle text-success me-2"></i>
              <small>CSV files are smaller and open in any spreadsheet application</small>
            </li>
            <li class="mb-2">
              <i class="bi bi-check-circle text-success me-2"></i>
              <small>Excel files include formatting and multiple sheets</small>
            </li>
            <li class="mb-2">
              <i class="bi bi-check-circle text-success me-2"></i>
              <small>Analytics reports include charts and summary data</small>
            </li>
            <li class="mb-0">
              <i class="bi bi-check-circle text-success me-2"></i>
              <small>All exports include current date in filename</small>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
