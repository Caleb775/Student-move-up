<%= form_with(model: student, local: true, class: "needs-validation", novalidate: true) do |form| %>
  <% if student.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <h4 class="alert-heading">
        <i class="bi bi-exclamation-triangle-fill me-2"></i>
        <%= pluralize(student.errors.count, "error") %> prohibited this student from being saved:
      </h4>
      <ul class="mb-0">
        <% student.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row">
    <div class="col-md-6 mb-3">
      <%= form.label :name, class: "form-label" %>
      <%= form.text_field :name, class: "form-control", required: true %>
      <div class="invalid-feedback">
        Please provide a valid name.
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-3 mb-3">
      <%= form.label :reading, class: "form-label" %>
      <%= form.number_field :reading, class: "form-control", min: 0, max: 10, required: true %>
      <div class="invalid-feedback">
        Please provide a reading score between 0 and 10.
      </div>
    </div>

    <div class="col-md-3 mb-3">
      <%= form.label :writing, class: "form-label" %>
      <%= form.number_field :writing, class: "form-control", min: 0, max: 10, required: true %>
      <div class="invalid-feedback">
        Please provide a writing score between 0 and 10.
      </div>
    </div>

    <div class="col-md-3 mb-3">
      <%= form.label :listening, class: "form-label" %>
      <%= form.number_field :listening, class: "form-control", min: 0, max: 10, required: true %>
      <div class="invalid-feedback">
        Please provide a listening score between 0 and 10.
      </div>
    </div>

    <div class="col-md-3 mb-3">
      <%= form.label :speaking, class: "form-label" %>
      <%= form.number_field :speaking, class: "form-control", min: 0, max: 10, required: true %>
      <div class="invalid-feedback">
        Please provide a speaking score between 0 and 10.
      </div>
    </div>
  </div>

  <div class="d-flex justify-content-between">
    <%= link_to 'Cancel', students_path, class: "btn btn-danger" %>
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>

<script>
// Bootstrap form validation
(function() {
  'use strict';
  window.addEventListener('load', function() {
    var forms = document.getElementsByClassName('needs-validation');
    var validation = Array.prototype.filter.call(forms, function(form) {
      form.addEventListener('submit', function(event) {
        if (form.checkValidity() === false) {
          event.preventDefault();
          event.stopPropagation();
        }
        form.classList.add('was-validated');
      }, false);
    });
  }, false);
})();
</script>